<h1>Listing walls</h1>
 
<table>
  <tr>
    <th>Number</th>
    <th>Title</th>
    <th>Text</th>
  </tr>
 
  <% @walls.each do |wall| %>
    <tr>
      <td ><%= wall.id %></td>
      <td><%= wall.title %></td>
      <td><%= wall.text %></td>
      <td><%= link_to 'Show', wall_path(wall) %></td>
       <td><%= link_to '', edit_wall_path(wall) , class: "glyphicon glyphicon-wrench btn-default" %></td>
      <td><%= link_to 'Destroy', wall_path(wall),
                    method: :delete, data: { confirm: 'Are you sure?' } %></td>

    </tr>
  <% end %>
</table>

<%= link_to '', walls_path, class: "glyphicon glyphicon-arrow-left btn btn-default" %>  

 <%= link_to '', new_wall_path, class: "glyphicon glyphicon-plus btn btn-default" %>



